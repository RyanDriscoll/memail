{
  "manifest_version": 2,

  "name": "MeMail",
  "version": "1.0",
  "description": "Send email to yourself",
  "browser_action": {
    "default_icon": "mail_icon.png",
    "default_popup": "popup.html"
  },
  "background": {
        "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "identity",
    "identity.email"
  ]
}