{
  "manifest_version": 2,

  "name": "MEmail",
  "version": "3.0",
  "description": "Email yourself links to sites you'd like to view later, in a single click!",
  "icons": {
    "16": "memail_logo@16px.png",
    "48": "memail_logo@48px.png",
    "128": "memail_logo@128px.png"
  },
  "browser_action": {
    "default_icon": "memail_logo@128px.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "identity",
    "identity.email",
    "https://guarded-shore-88310.herokuapp.com/send",
    "https://us-central1-memail-163415.cloudfunctions.net/sendMeMail"
  ]
}
